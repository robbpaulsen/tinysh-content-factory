# Image Generation
FLUX_MODEL=black-forest-labs/FLUX.1-schnell-Free
IMAGE_WIDTH=768
IMAGE_HEIGHT=1344

# YouTube Upload
YOUTUBE_PRIVACY_STATUS=public  # Options: public, private, unlisted
YOUTUBE_CATEGORY_ID=24  # 24 = Entertainment

# ========================================
# FFmpeg Optimization (Fase 1)
# ========================================

# Video Encoder
FFMPEG_ENCODER=auto              # Options: auto (detect), nvenc (GPU), x264 (CPU)
FFMPEG_PRESET=p4                 # NVENC: p1-p7 (p4=balanced) | x264: medium
FFMPEG_CQ=23                     # Quality: 18=best, 28=worst (default: 23)
FFMPEG_BITRATE=5M                # Target bitrate (5M recommended for Shorts)
FFMPEG_AUDIO_BITRATE=128k        # Audio bitrate (128k sufficient for Shorts)

